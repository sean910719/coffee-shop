<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >


    <!-- 圓角，Layout佈局圓角幅度設定值 -->
    <corners
        android:radius="8dip"
        />

    <!-- 框內底部顏色 -->
    <solid
        android:color="@android:color/black"
        />

    <!-- 外框，框線粗細，框線顏色 -->
    <stroke
    android:width="2.0dip"
    android:color="@android:color/black"/>

    <!-- 畫面顏色漸層，開始色碼與結束色碼進行漸層，角度為315度 -->
    <gradient
        android:startColor= "#F0A000"
        android:endColor= "#A06000"

        android:angle="315"
        />

    <!-- padding內縮距離 -->
    <padding

        />

    <!-- 尺寸大小 -->
    <!--    <size-->
    <!--        android:width="150dip"-->
    <!--        android:height="100dip"-->
    <!--        />-->

</shape>